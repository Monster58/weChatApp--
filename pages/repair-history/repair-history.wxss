/* pages/repair-history/repair-history.wxss */

.page {
  padding-top: 20rpx;
}
.repair_history_item.solved {
  opacity: .6;
}
.repair_history_item {
  width: 96%;
  margin: 0 auto;
  border-radius: 10rpx;
  padding-left: 20rpx !important;
  position: relative;
}

.repair_title {
  font-size: 18px;
}

.repair_desc {
  font-size: 16px;
  margin-top: 10rpx;
}

.repair_img {
  background-color: #ccc;
}

.state_true {
  position: absolute;
  right: 0;
  top: 0;
  width: 100rpx;
  height: 50rpx;
  background-color: #ccc;
  text-align: center;
  line-height: 50rpx;
  font-size: 15px;
  color: #666;
}

.state_false {
  position: absolute;
  right: 0;
  top: 0;
  width: 100rpx;
  height: 50rpx;
  background-color: #61A5FF;
  text-align: center;
  line-height: 50rpx;
  font-size: 15px;
  color: #fff;
}

.repair_history_item_content {
  margin-bottom: 20rpx;
}
