@import "/libs/weui.wxss";

.page {
  background-color: rgb(240, 240, 240);
  /* background-color: #fff; */
  height: 100vh;
}
.card_swiper {
  background-color: #fff;
}
swiper {
  width: 100%;
  height: 360rpx;
}

swiper image {
  width: 100%;
  height: 370rpx;
}

.weui-grids {
  background-color: white;
  border-top: none;
  border-left: none;
}

.weui-grid__icon image {
  display: block;
  width: 100%;
  height: 100%;
}

.weui-grid {
  width: 25%;
}

.swiper-container {
  position: relative;
}

.swiper-container .swiper {
  height: 300rpx;
}

.swiper-container .swiper .slide-image {
  width: 100%;
  height: 100%;
}

.swiper-container .dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.swiper-container .dots .dot {
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #fff;
  border-radius: 8rpx;
  transition: all 0.6s;
}

.swiper-container .dots .dot.active {
  width: 24rpx;
  background: #f80;
}

.weui-grid {
  border: none !important;
}

.weui-grids {
  width: 96%;
  margin: 0 auto;
  margin-top: 10px;
  border-radius: 10px;
  position: relative;
  /* top: -80rpx; */
}

.weui-panel {
  width: 96%;
  margin: 0 auto;
  margin-top: 10px;
  border-radius: 10px;
}

.weui-panel__hd .title {
  font-size: 16px;
  color: #444;
  border-left: 6rpx solid #61a5ff;
  padding-left: 14rpx;
}

.weui-cell__bd {
  font-size: 14px;
}

.weui-cell_access {
  padding: 28rpx 30rpx;
}
.weui-cells {
  background-color: unset;
}
.weui-panel,
.weui-media-box,
.weui-cells,
.weui-media-box,
.weui-cell {
  position: unset;
}
.text-orange, .line-orange, .lines-orange {
  color: #61A5FF;
}
.card-swiper swiper-item {
  padding: 40rpx 0rpx 50rpx;
} 
.weui-grid__icon {
  width: 74rpx;
  height: 74rpx;
}
.weui-grid {
  padding: 18rpx 10px;
}