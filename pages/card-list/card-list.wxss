/* pages/card-list/card-list.wxss */

.card_list {
  margin-top: 30rpx;
}
.card_item {
  width: 90%;
  height: 300rpx;
  margin: 0 auto;
  margin-bottom: 20rpx;
  position: relative;
  border-radius: 30rpx;
  box-shadow: 0 0rpx 10rpx rgb(155, 167, 194);
}
.jiebang {
  position: absolute !important;
  bottom: 38rpx;
  right: 28rpx;
  height: 50rpx !important;
}
.card_item image {
  width: 100%;
  height: 100%;
  position: absolute;
  /* z-index: 1; */
}
.card-number {
  width: 100%;
  position: absolute;
  z-index: 2;
  color: #fff;
  font-size: 24px;
  margin-top: 77rpx;
  text-align: left;
  padding-left: 56rpx;
}
.button {
  width: 96%;
  margin: 0 auto;
  border-radius: 10px;
  overflow: hidden;
}
