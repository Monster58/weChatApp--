/* pages/signing-type/signing-type.wxss */

.userinfo {
  display: flex;
  /* flex-direction: column; */
  align-items: center;
  /* margin-top: 10rpx; */
  padding: 30rpx 30rpx;
  background-color: #61A5FF;
  margin-bottom: 10rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.portrait {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  overflow: hidden;
}
.user-name {
  font-size: 16px;
  color: #fff;
  padding-left: 40rpx;
}
.item {
  display: flex;
  /* justify-content: */
  background-color: #fff;
  padding: 30rpx 40rpx;
  font-size: 15px;
  border-bottom: 1px solid rgb(245, 245, 245);
  width: 96%;
  margin: 0 auto;
  margin-bottom: 14rpx;
  border-radius: 10px;
}
.item-name {
  margin-left: 14rpx;
}