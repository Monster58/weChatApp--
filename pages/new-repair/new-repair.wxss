@import "/libs/weui.wxss";

.page {
  background-color: rgb(240, 240, 240);
  height: 100vh;
  padding-top: 14rpx;
}

.weui-form-preview {
  margin-bottom: 25px;
}

.button-sp-area {
  margin: 0 auto;
  padding-top: 15px;
  width: 60%;
}

.weui-footer {
  margin-bottom: 50px;
}

.card {
  background-color: #fff;
  width: 96% !important;
  margin: 14rpx auto;
  padding: 10rpx 30rpx;
  border-radius: 10rpx;
}

.card .title {
  font-size: 16px;
}

.card .list {
  font-size: 16px;
  color: rgb(66, 66, 66);
}

.weui-select {
  border-right: none;
}

.card.line {
  display: flex;
  justify-content: space-between;
}


.card.line .list {
  width: 70%;
}

.card.line .title {
  line-height: 2.78823529em;
  width: 30%;
  font-size: 16px;
}
.card .textarea_content textarea {
  font-size: 16px;
  padding: 10rpx;
  padding-left: 0;
}
.card .textarea_content image {
  width: 176rpx;
  height: 176rpx;
}
.weui-label {
  font-size: 16px;
}
weui-input,
.weui-cell__bd {
  font-size: 16px;
}
.margin_top {
  margin-top: 20rpx;
}
.imgList {
  display: flex;
}
.imgList .img_item {
  margin: 0 20rpx;
}